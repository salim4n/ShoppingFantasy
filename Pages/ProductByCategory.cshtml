@page
@model ShoppingFantasy.Pages.ProductByCategoryModel
@{
    ViewData["Title"] = $"{Model.Category.Name}";
}


<ul class="list-unstyled">
    @foreach(var product in Model.Category.Products)
    {
        <li class=" row oi-media-pause my-3 container bg-primary rounded">
            <div class="media-img-wrapper mr-2 pt-2 px-2">
                @foreach(var picture in product.Picture)
                {
                     <button type="button" class="btn" data-toggle="modal" data-target="#productModal-@picture.Id" >
                   <img class="media-img rounded" src="@picture.PictureUrl" alt="@product.Name" />
                   </button>
                    <!-- Large modal -->


                    <div class="modal fade productModal" tabindex="-1" role="dialog" aria-labelledby="productModal" aria-hidden="true" id="productModal">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                ...
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="media-body pb-2">
                <h4 class="mb-0 pb-3 pt-3">@product.Name</h4>
                <div class="container bg-secondary rounded">
                <p><em>@product.Description</em></p>
                </div>
                    <div class="flex-row px-4">
                @if (product.IsInPromo)
                {
                    <h5 class="price"><strike class="text-warning">@product.Price.ToString("c")</strike></h5>
                    <h5 class="price"><strong class="text-info">@product.PromoPrice.ToString("c")</strong></h5>
                }
                else
                {
                    <h5 class="price"><strong class="text-info">@product.Price.ToString("c")</strong></h5>
                }
                    <button class="btn btn-info btn-sm"><i class="bi bi-cart"></i> Ajouter au panier</button>
                    </div>
                </div>
           
         </li>
         
    }
</ul>


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>











