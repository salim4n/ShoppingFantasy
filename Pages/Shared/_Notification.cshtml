

@if (TempData.ContainsKey("Cle"))
{

    <div id="alert-message" class="alert alert-info  rounded text-center" role="alert">
        <h4 class="pt-3">@TempData["Cle"]</h4>
    </div>

    <script>
        setTimeout(function () {
            document.getElementById("alert-message").style.display = "none";
        }, 5000);
    </script>
}


