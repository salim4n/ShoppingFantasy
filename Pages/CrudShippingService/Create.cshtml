@page
@model ShoppingFantasy.Pages.CrudShippingService.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ShippingService</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ShippingService.Name" class="control-label"></label>
                <input asp-for="ShippingService.Name" class="form-control" />
                <span asp-validation-for="ShippingService.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippingService.Price" class="control-label"></label>
                <input asp-for="ShippingService.Price" class="form-control" type="number" />
                <span asp-validation-for="ShippingService.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippingService.FreeShippingAt" class="control-label"></label>
                <input asp-for="ShippingService.FreeShippingAt" class="form-control" type="number"  />
                <span asp-validation-for="ShippingService.FreeShippingAt" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ShippingService.IsFree" /> @Html.DisplayNameFor(model => model.ShippingService.IsFree)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
