@page
@model ShoppingFantasy.Pages.CrudProduct.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.PromoPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.PromoPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.IsInPromo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.IsInPromo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Category.Name)
        </dd>
    </dl>

 
    <div class="row">
        @foreach(var item in Model.Product.Picture)
        {
            <div class="col col-lg-2 col-md-4 col-sm-6">
                    <a  target="_blank" href="@item.PictureUrl">
                    <img class="card-img-top" src="@item.PictureUrl" alt="@item.FileName">
                    <div class="card-body">
                        <p class="card-text">@item.PictureUrl</p>
                        
                    </div>
                    </a>
                </div>
               
        }
    </div>

</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Product?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
